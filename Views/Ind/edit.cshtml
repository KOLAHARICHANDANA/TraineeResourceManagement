@model TraineeResourceManagement.Models.Class1

@{
    ViewBag.Title = "edit";
}


@using (Html.BeginForm("edit", "Ind", FormMethod.Post))
{
    <br />

    <span>Trainer name: </span> @Html.DropDownList("tn", Model.lm)
    <span>Room no:</span>@Html.DropDownList("room", Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
    <input type="hidden" value="@ViewBag.id" name="qid" />
    <input type="submit" value="submit" />
}

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Project Manager</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
        </tr>
    </thead>
    <tr>
        <td>
            @Model.cpmname
        </td>


        <td>
            @Model.csdate.ToShortDateString()
        </td>

        <td>
            @Model.cedate.ToShortDateString()
        </td>
    </tr>
</table>



